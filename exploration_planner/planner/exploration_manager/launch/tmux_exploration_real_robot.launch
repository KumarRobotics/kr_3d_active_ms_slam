<launch>
  <arg name="mav_name" default="f250_ariel"/>
  <arg name="world_frame_id" default="world"/>
  <arg name="color/r" default="0.0"/>
  <arg name="color/g" default="0.0"/>
  <arg name="color/b" default="1.0"/>
  <arg name="color/a" default="0.7"/>

  <arg name="mapper_config" default="$(find exploration_manager)/config/mapper_real_robot.yaml"/>
  <arg name="traj_planner_config" default="$(find gcopter)/config/gcopter_real_robot.yaml"/>

  <arg name="slam_odom_topic" default="/factor_graph_atl/quadrotor/high_freq_odom"/>
  <arg name="vio_odom_topic" default="/dragonfly67/quadrotor_ukf/control_odom"/>

  <group ns="$(arg mav_name)">

    <include file="$(find exploration_manager)/launch/real_robot.launch">
      <arg name="mapper_config" value="$(arg mapper_config)"/>
      <arg name="traj_planner_config" value="$(arg traj_planner_config)"/>
      <arg name="world_frame_id" value="$(arg world_frame_id)"/>
      <arg name="mav_name"   value="$(arg mav_name)"/>
      <arg name="slam_odom_topic" value="$(arg slam_odom_topic)"/>
      <arg name="vio_odom_topic" value="$(arg vio_odom_topic)"/>
    </include>
  </group>

</launch>
